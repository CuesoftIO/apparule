<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_signInLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="3.5"

    android:background="@drawable/landing"
    android:backgroundTint="#534c4c"
    android:backgroundTintMode="multiply"
    android:tint="#716b6b"
    tools:layout_editor_absoluteY="25dp">


    <EditText
        android:id="@+id/password_signinField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#e7d9d9"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="#e7d9d9"
        android:textColorHint="#e7d9d9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/signButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_signinField" />

    <ImageView
        android:id="@+id/logo_signin"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_sigin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/text_sigin"
        android:layout_width="120dp"
        android:layout_height="0dp"

        android:layout_marginTop="74dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintBottom_toTopOf="@+id/username_signinField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_text_white" />

    <TextView
        android:id="@+id/forgetPasswordText_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Forgot Password?"
        android:textColor="#e7d9d9"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/designer_signupText_singup_in_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signButton" />


    <android.support.v7.widget.CardView
        android:id="@+id/signButton"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="22dp"
        app:cardBackgroundColor="#00b7ff"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/forgetPasswordText_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signinField">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN IN"
            android:textColor="#f1f3f4"

            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/designer_signupText_singup_in_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="56dp"
        android:autoLink="all"
        android:text="@string/sign_up_here"
        android:textColor="#e7d9d9"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/cuesoft_signgin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/forgetPasswordText_signin" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Don't have an account?"
        android:textColor="#e7d9d9"
        android:textSize="12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/designer_signupText_singup_in_signin"
        app:layout_constraintEnd_toStartOf="@+id/designer_signupText_singup_in_signin"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/username_signinField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#e7d9d9"
        android:ems="10"
        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:textColor="#e7d9d9"
        android:textColorHint="#e7d9d9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/password_signinField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sigin" />

    <TextView
        android:id="@+id/cuesoft_signgin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Copyright @ 2019 Cuesoft Ltd"
        android:textColor="#e7d9d9"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/designer_signupText_singup_in_signin" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="133dp" />

</android.support.constraint.ConstraintLayout>