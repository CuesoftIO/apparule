<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_01"
    android:backgroundTint="#534c4c"
    android:backgroundTintMode="multiply"
    tools:layout_editor_absoluteY="25dp">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#e7d9d9"
        app:layout_constraintBottom_toTopOf="@id/guideline12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="318dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/designerPasswordField2"
            android:layout_width="252dp"
            android:layout_height="40dp"
            android:backgroundTint="#e7d9d9"
            android:ems="10"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.Design.Hint"
            android:textColor="#e7d9d9"
            android:textColorHint="#e7d9d9"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="291dp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="103dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toTopOf="@id/guideline11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_text_white"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="98dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/designerSignInButton"
        android:layout_width="242dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="#ffcc00"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/guideline12"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="368dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN UP" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#e7d9d9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/textInputLayout9"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="256dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/designerPasswordField1"
            android:layout_width="252dp"
            android:layout_height="40dp"
            android:backgroundTint="#e7d9d9"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textAppearance="@style/TextAppearance.Design.Hint"
            android:textColor="#e7d9d9"
            android:textColorHint="#e7d9d9"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="226dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/designer_terms_and_Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="I agree to the term and conditions."
        android:textColor="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/iAgree_checkBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/designerSignInButton" />

    <TextView
        android:id="@+id/cuesoftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright @ 2019 Cuesoft Ltd"
        android:textColor="#e7d9d9"
        android:textSize="8sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="482dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="115dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="356dp" />

    <ImageView
        android:id="@+id/business_logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/business_logoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:id="@+id/business_logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Select your business logo"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@id/textInputLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="235dp" />

    <CheckBox
        android:id="@+id/iAgree_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:shadowColor="@android:color/white"
        android:text="I Agree"
        android:textColor="#f2e6e6"
        app:layout_constraintBaseline_toBaselineOf="@id/designer_terms_and_Conditions"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>