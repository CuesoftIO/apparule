<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1.0"
    android:background="@drawable/landing"
    android:backgroundTint="#534c4c"
    android:backgroundTintMode="multiply"
    android:tint="#fc121010"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textColorHint="#e7d9d9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleTint="@color/colorAccent">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/customerFullName"
            android:layout_width="251dp"
            android:layout_height="40dp"
            android:backgroundTint="#e7d9d9"
            android:ems="10"
            android:hint="FULLNAME"
            android:inputType="textPersonName"
            android:textColor="#e7d9d9"
            android:textColorHint="#e7d9d9"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="119dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#e7d9d9"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout3"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/customerPassword1"
            android:layout_width="252dp"
            android:layout_height="36dp"

            android:backgroundTint="#e7d9d9"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="#e7d9d9"
            android:textColorHint="#e7d9d9"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="231dp" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="103dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/alreadyhaveaccontText"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="19dp"
        android:text="Already have an account?"
        android:textColor="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/signinText"
        app:layout_constraintEnd_toEndOf="@+id/designerSignUpText" />


    <android.support.v7.widget.CardView
        android:id="@+id/signUpButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="84dp"
        app:cardBackgroundColor="#00b7ff"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/designerSignUpText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SIGN UP"
            android:textColor="#f5f3f3" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="121dp"
        android:layout_height="40dp"

        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_text_white" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColorHint="#e7d9d9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout1"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/CustomerEmail"
            android:layout_width="252dp"
            android:layout_height="36dp"
            android:backgroundTint="#e7d9d9"
            android:ems="10"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:textColor="#e7d9d9"
            android:textColorHint="#e7d9d9"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="175dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/signinText"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"
        android:text="@string/sign_in_here"
        android:textColor="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/designerSignUpText"
        app:layout_constraintStart_toEndOf="@+id/alreadyhaveaccontText"
        app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

    <TextView
        android:id="@+id/designerSignUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="39dp"
        android:text="Are you a Designer?"
        android:textColor="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cuesoftText" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:textColorHint="#e7d9d9"
        app:layout_constraintBottom_toTopOf="@+id/signUpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <EditText
            android:id="@+id/customerPassword2"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#e7d9d9"
            android:ems="10"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:textColor="#e7d9d9"
            android:textColorHint="#e7d9d9"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="281dp" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/cuesoftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Copyright @ 2019 Cuesoft Ltd"
        android:textColor="#e7d9d9"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="217dp" />

</android.support.constraint.ConstraintLayout>